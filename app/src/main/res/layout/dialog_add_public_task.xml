<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <EditText
        android:id="@+id/editpublicTasktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add task"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:layout_marginBottom="10sp"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewPublicTaskStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date and Time"
        android:padding="10dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10sp"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/textViewPublicTaskEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date and Time"
        android:padding="10dp"
        android:background="@drawable/bg_textview"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10sp"
        android:clickable="true"
        android:focusable="true"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTaskLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add Location"
        android:gravity="center"
        android:background="@drawable/bg_textview"
        android:layout_marginBottom="10sp"
        android:padding="10dp" />


</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AutoCompleteTextView pour l'adresse -->
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTaskLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_textview"
        android:hint="Entrez une adresse"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Bouton de recherche -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/autoCompleteTaskLocation"
        android:background="@drawable/background_button_intro"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"/>

    <!-- TextView pour afficher l'adresse -->
    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchButton"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Fragment pour afficher la carte -->

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/addressTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp" />


    <Button
        android:id="@+id/locationButton"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/background_button_intro"
        android:text="Recenter" />

    <ImageView
        android:id="@+id/addressImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/buttonOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/background_button_intro"
        android:text="OK" />

    <Button
        android:id="@+id/routeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/autoCompleteTaskLocation"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/locationButton"
        android:background="@drawable/background_button_intro"
        android:text="Go" />


</RelativeLayout>
